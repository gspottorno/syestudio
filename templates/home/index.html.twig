{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">


  <ul id="ulcss">

<h2>Actualmente hay {{ centros|length }} centros en nuestro directorio</h2>

  {% for data in centros %}

  <li><a href="{{ data.slug }}">{{ data.centro }}</a>
    <ul>
      {{ render(controller(
      'App\\Controller\\HomeController::cursosCentro',
      { 'idCentro': data.idCentro }
      ))}}
    </ul>
  </li>

  {% endfor %}

  </ul>

</div>

<div class="aparto">
Estás en la página: {{ page }}

<div class="jumbotron">asd</div>

</div>


{% endblock %}
